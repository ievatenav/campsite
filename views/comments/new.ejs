<% include ../partials/header %>

<div class="container" style="margin-top: 25px;">
    <h1 style="text-align: center;">Add New Comment to "<%= campsite.name %>"</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campsites/<%= campsite._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text" required>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campsites" class="btn btn-secondary btn-sm">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>