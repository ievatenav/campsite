<% include ../partials/header %>

<div class="form">
    <h1 style="text-align: center;">Edit Comment</h1>
    <form action="/campsites/<%= campsite_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
        </div>
        <div class="form-group">
           <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>
    <a href="/campsites" class="btn btn-secondary btn-sm">Go Back</a>
</div>

<% include ../partials/footer %>